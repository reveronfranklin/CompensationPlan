@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<input type="number" @bind="currentCount" />

<AuthorizeView>
    <Authorized>
        <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
        
    </Authorized>
    <NotAuthorized>
        Usted no esta autorizado
    </NotAuthorized>
    <Authorizing>
        Autorizando
    </Authorizing>
</AuthorizeView>



@code {
  
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
      
    }
}
